<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:background="@drawable/background_grad"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="240dp"
        android:id="@+id/layoutInput"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_white"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:text="Season"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="323dp"
            android:id="@+id/etSeasonTitle"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:inputType="textPersonName"
            android:drawablePadding="20dp"
            android:hint="Season Name" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="20dp"
            android:id="@+id/etSeasonDescription"
            android:hint="Season Description"
            android:maxLines="5"
            android:inputType="textPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="Start Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="20dp"
            android:id="@+id/etStartDate"
            android:hint="yyyy/MM/dd"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5dp"
            android:text="End Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:drawablePadding="20dp"
            android:id="@+id/etEndDate"
            android:hint="yyyy/MM/dd"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btnCreateSeason"
            android:layout_marginTop="25dp"
            android:textColor="#FFF"
            android:background="@drawable/background_grad"
            android:textAllCaps="false"
            android:text="Create Season"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageVIew"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/season"
        android:padding="5dp"
        android:layout_width="120dp"
        android:layout_height="100dp" />

    <TextView
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageVIew"
        android:text="Create New Season"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="188dp"
        android:visibility="invisible" />

</RelativeLayout>