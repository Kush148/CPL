<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_height="wrap_content"
    tools:context=".BrowsePlayerList">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/points"
    android:orientation="horizontal"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_teamName"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Team Name aaaa"
        android:layout_marginLeft="4dp"
        android:textColor="#333333"
        android:textSize="17dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_play"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="P"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_win"
        app:layout_constraintStart_toEndOf="@+id/tv_teamName"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_win"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="W"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_lose"
        app:layout_constraintStart_toEndOf="@+id/tv_play"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_lose"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="L"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_points"
        app:layout_constraintStart_toEndOf="@+id/tv_win"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_points"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:text="Pts"
        android:textAlignment="center"
        android:textColor="#333333"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_lose"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

