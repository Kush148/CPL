<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_add_teammanager">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:background="@drawable/background_grad"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="250dp"
            android:id="@+id/layoutInput"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/background_white"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:text="User ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:drawablePadding="20dp"
                android:id="@+id/userId"
                android:hint="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text="Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:drawablePadding="20dp"
                android:hint="Charls Reddy"
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="Email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:drawablePadding="20dp"
                android:id="@+id/email"
                android:hint="charlsreddy56@gmail.com"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="Password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:drawablePadding="20dp"
                android:id="@+id/password"
                android:inputType="numberPassword"
                android:hint="********"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginTop="5dp"
                android:text="Date of Birth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:drawablePadding="20dp"
                android:id="@+id/dob"
                android:hint="yyyy-mm-dd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="5dp"
                android:text="Contact Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:drawablePadding="20dp"
                android:id="@+id/contact"
                android:hint="514-678-5643"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:layout_marginTop="10dp"
                android:textColor="#FFF"
                android:id="@+id/addManger"
                android:background="@drawable/background_grad"
                android:textAllCaps="false"
                android:text="+ ADD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageVIew"
            android:layout_marginTop="52dp"
            android:layout_marginBottom="5dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/manager"
            android:padding="5dp"
            android:layout_width="90dp"
            android:layout_height="90dp" />

        <TextView
            android:textSize="24sp"
            android:textColor="#FFF"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imageVIew"
            android:text="Add Manager"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</FrameLayout>